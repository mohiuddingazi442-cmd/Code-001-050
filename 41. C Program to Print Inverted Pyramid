#include <stdio.h>

int main() {
    int i, j, rows;

    // Ask user for number of rows
    printf("Enter the number of rows: ");
    scanf("%d", &rows);

    // Loop for each row
    for(i = rows; i >= 1; i--) {
        // Print leading spaces
        for(j = 1; j <= rows - i; j++) {
            printf(" ");
        }
        // Print stars
        for(j = 1; j <= (2 * i - 1); j++) {
            printf("*");
        }
        // Move to next line
        printf("\n");
    }

    return 0;
}
