#include <stdio.h>

int main() {
    int n, sum = 0;

    // Ask user for input
    printf("Enter a positive integer: ");
    scanf("%d", &n);

    // Calculate sum of first n natural numbers
    for(int i = 1; i <= n; i++) {
        sum += i; // sum = sum + i
    }

    // Display the result
    printf("The sum of first %d natural numbers is: %d\n", n, sum);

    return 0;
}
