#include <stdio.h>

int main() {
    int i, j, n;

    printf("Enter the number of rows for the diamond's half: ");
    scanf("%d", &n);

    // Upper Hollow Pyramid
    for(i = 1; i <= n; i++) {
        // Print leading spaces
        for(j = 1; j <= n - i; j++) {
            printf(" ");
        }

        // Print stars and spaces
        for(j = 1; j <= 2*i - 1; j++) {
            if(j == 1 || j == 2*i - 1)
                printf("*");
            else
                printf(" ");
        }
        printf("\n");
    }

    // Lower Hollow Inverted Pyramid
    for(i = n-1; i >= 1; i--) {
        // Print leading spaces
        for(j = 1; j <= n - i; j++) {
            printf(" ");
        }

        // Print stars and spaces
        for(j = 1; j <= 2*i - 1; j++) {
            if(j == 1 || j == 2*i - 1)
                printf("*");
            else
                printf(" ");
        }
        printf("\n");
    }

    return 0;
}
